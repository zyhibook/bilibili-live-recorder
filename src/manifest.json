{
    "name": "Bilibili 直播间录制器",
    "version": "1.0.0",
    "description": "一键录制 Bilibili 直播间视频，不用错过主播的精彩时刻。",
    "manifest_version": 2,
    "background": {
        "scripts": ["background/index.js"]
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["tabs", "webRequest", "webRequestBlocking", "notifications", "*://*.bilibili.com/*"],
    "browser_action": {
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.bilibili.com/*"],
            "js": ["content/index.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": ["injected/index.js", "injected/index.css"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
