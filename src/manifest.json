{
    "name": "bilibili-live-downloader",
    "version": "1.0.0",
    "description": "Chrome 扩展 - Bilibili 直播视频下载",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "./background/index.js"
        ]
    },
    "icons": {
        "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "https://*.bilibili.com/*"
    ],
    "options_page": "./options/index.html",
    "options_ui": {
        "page": "./options/index.html"
    },
    "browser_action": {},
    "content_scripts": [
        {
            "matches": [
                "https://*.bilibili.com/*"
            ],
            "js": [
                "./content/index.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "injected/index.js",
        "injected/index.css"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}